<% start_date = Date.today %>
<% end_date = start_date + 6.days %>

<div class="index_top">
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>日時</th>
    </tr>
  </thead>

  <tbody>
    <% @events.select { |event| event.start_time >= start_date && event.start_time <= end_date }.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%m/%d %H:%M") %></td>
        <td>【 <%= link_to '詳細', event_path(event.id) %> 】</td>
        <td>【 <%= link_to '編集', edit_event_path(event.id) %> 】</td>
        <td>【 <%= link_to '削除', event_path(event.id), data: { turbo_method: :delete} %> 】</td>
      </tr>
    <% end %>
  </tbody>
</table>

